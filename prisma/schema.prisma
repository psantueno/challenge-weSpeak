generator client {
  provider = "prisma-client-js"
  output   = "./node_modules/.prisma/client"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model counter {
  id           String    @id @default("GLOBAL")
  value        Int?      @default(0)
  last_updated DateTime? @default(now()) @db.Timestamptz(6)

  @@map("counter")
}
